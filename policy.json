{
  "roles": {
    "Engineering": {
      "allowed_systems": ["Slack", "Jira", "GitHub", "AWS"],
      "max_hardware_budget": 3000
    },
    "Finance": {
      "allowed_systems": ["Slack", "Jira", "NetSuite", "Excel"],
      "max_hardware_budget": 2000
    },
    "Interns": {
      "allowed_systems": ["Slack", "Jira"],
      "max_hardware_budget": 1500
    },
    "Operations": {
      "allowed_systems": ["Slack", "Jira", "AWS"],
      "max_hardware_budget": 2500
    },
    "Security": {
      "allowed_systems": ["*"],
      "can_revoke_access": true,
      "max_hardware_budget": 5000
    }
  },
  "sensitive_actions": {
    "AWS": {
      "write_access": "REQUIRES_APPROVAL",
      "admin_access": "DENY"
    },
    "Okta": {
      "create_user": "REQUIRES_APPROVAL",
      "delete_user": "REQUIRES_APPROVAL",
      "assign_admin": "DENY",
      "admin_access": "DENY"
    },
    "GitHub": {
      "write_access": "REQUIRES_APPROVAL",
      "admin_access": "DENY"
    },
    "NetSuite": {
      "write_access": "REQUIRES_APPROVAL",
      "admin_access": "DENY"
    }
  },
  "system_specific_rules": {
    "Slack": {
      "auto_approve_channels": ["#general", "#random", "#social", "#announcements", "#fde-team-updates"],
      "restricted_channels": ["#executive-confidential", "#hr-sensitive"]
    },
    "Jira": {
      "auto_approve_projects": ["HELP", "SUPPORT"],
      "restricted_projects": ["EXEC", "FIN", "HR"]
    },
    "GitHub": {
      "auto_approve_repos": ["docs", "wiki", "public-examples"],
      "restricted_repos": ["prod-infrastructure", "secrets-vault"]
    },
    "AWS": {
      "restricted_resources": ["prod-db", "production-rds", "master-db"]
    }
  }
}